<?xml version="1.0"?>

<launch>
    <arg name="ros_output" default="log" />
    <arg name="debug" default="false" />

    <group ns="atwork_refbox">
        <!-- load config -->
        <rosparam file="$(find atwork_refbox_ros)/config/BNT.yaml" ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/BMT.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/BTT1.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/BTT2.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/BTT3.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/RTT.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/PPT.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/Final.yaml"  ns="tasks"/>
        <rosparam file="$(find atwork_refbox_ros)/config/Arena.yaml"/>

        <!-- start refbox (incl task generator) -->
        <node pkg="atwork_refbox_ros" type="atwork_refbox_ros_node" name="core" required="true" output="$(arg ros_output)">
          <param name="publish_frequency" value="1.0"/>
          <param name="robot_timeout" value="10.0"/>
          <param name="debug" value="$(arg debug)"/>
        </node>

        <!-- load com -->
        <include file="$(find atwork_refbox_ros_com)/launch/atwork_refbox_ros_com.launch">
            <arg name="output" value="$(arg ros_output)"/>
        </include>

    </group>
</launch>
